{% extends 'base.html.twig' %}

{% block title %}Gerenciador de Eventos{% endblock %}

{% block body %}
    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h1 class="display-4">Eventos</h1>
        <p class="lead">Proximos eventos a ser realizado</p>
    </div>

    <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
        <div class="col">
            <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <h4 class="my-0 fw-normal">Eventos</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title">
                        Controle seus <small class="text-muted">Eventos</small></h1>

                    <ul class="list-unstyled mt-3 mb-4">
                        <li>Título</li>
                        <li>Data Início</li>
                        <li>Data Fim</li>
                        <li>Descrição</li>
                    </ul>

                    <a href="{{ path('eventos')}}" class="btn btn-lg btn-outline-primary">Ver Detalhes</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <h4 class="my-0 fw-normal">Palestra</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title">
                        Cadastre as <small class="text-muted">Palestra</small></h1>

                    <ul class="list-unstyled mt-3 mb-4">
                        <li>Título</li>
                        <li>Data</li>
                        <li>Hora de Início</li>
                        <li>Hora de Término</li>
                        <li>Descrição</li>
                    </ul>

                    <a href="{{ path('palestras')}}" class="btn btn-lg btn-outline-primary">Ver Detalhes</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <h4 class="my-0 fw-normal">Palestrante</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title">
                        Diga quem vai <small class="text-muted">Palestrar</small></h1>

                    <ul class="list-unstyled mt-3 mb-4">
                        <li>Nome</li>
                        <li>Especialidade</li>
                        <li>Descrição</li>
                    </ul>

                    <a href="{{ path('palestrantes')}}" class="btn btn-lg btn-outline-primary">Ver Detalhes</a>
                </div>
            </div>
        </div>
    </div>

    <footer class="pt-4 my-md-5 pt-md-5 border-top">
        <div class="row text-center">
            <div class="col-6 col-md">
                <h5>Menus</h5>
                <ul class="list-unstyled text-small">
                    <li><a class="link-secondary" href="{{ path('eventos') }}">Home</a></li>
                    <li><a class="link-secondary" href="{{ path('eventos') }}">Eventos</a></li>
                    <li><a class="link-secondary" href="{{ path('palestras') }}">Palestras</a></li>
                    <li><a class="link-secondary" href="{{ path('palestrantes') }}">Palestrantes</a></li>
                </ul>
            </div>
            <div class="col-6 col-md">
                <h5>Contatos</h5>
                <ul class="list-unstyled text-small">
                    <li>(88) 98811-2233</li>
                    <li>gerenciadoreventos@geventos.com.br</li>
                    <li>Rua São francisco 65115-230 Crato-Ce</li>
                </ul>
            </div>
            <div class="col-6 col-md">
                <h5>Rede socias</h5>
                <ul class="list-unstyled text-small">
                    <li><a class="link-secondary" href="#">Facebook</a></li>
                    <li><a class="link-secondary" href="#">Instagram</a></li>
                    <li><a class="link-secondary" href="#">Twitter</a></li>
                </ul>
            </div>
        </div>
    </footer>
{% endblock %}
