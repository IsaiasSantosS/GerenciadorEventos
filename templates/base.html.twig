<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Gerenciamento de Eventos{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('/assets/css/bootstrap.css') }}">
        {% block stylesheets %}
        {% endblock %}

        <script src="{{ asset('/assets/js/bootstrap.js') }}"></script>
        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
    <header class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-body border-bottom shadow-sm">
        <p class="h5 my-0 me-md-auto fw-normal">Gerenciador de Eventos</p>
        <nav class="my-2 my-md-0 me-md-3">
            <a class="p-2 text-dark" href="{{ path('home') }}">Home</a>
            <a class="p-2 text-dark" href="{{ path('eventos') }}">Eventos</a>
            <a class="p-2 text-dark" href="{{ path('palestras') }}">Palestras</a>
            <a class="p-2 text-dark" href="{{ path('palestrantes') }}">Palestrantes</a>
        </nav>
    </header>

    <div class="container">
        {% block body %}{% endblock %}
    </div>
    </body>
</html>
