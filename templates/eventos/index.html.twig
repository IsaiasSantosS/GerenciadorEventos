{% extends 'base.html.twig' %}

{% block title %}Lista de Eventos{% endblock %}

{% block body %}
<table>
    <thead>
        <tr>
            <th>Título</th>
            <th>Data Inicio</th>
            <th>Data Fim</th>
            <th>Opções</th>
        </tr>
    </thead>
    <tbody>
    {% for evento in eventos %}
    <tr>
        <td>{{ evento.titulo }}</td>
        <td>{{ evento.dtInicio|date('d/m/Y') }}</td>
        <td>{{ evento.dtFim|date('d/m/Y') }}</td>
        <td>
            <a href="{{ path('evento_mostrar', {id:evento.id}) }}">Ver</a>
            <a href="{{ path('evento_atualizar', {id:evento.id}) }}">Editar</a>
            <a href="{{ path('evento_deletar', {id:evento.id}) }}">Apagar</a>
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
