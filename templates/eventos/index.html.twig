{% extends 'base.html.twig' %}

{% block title %}Lista de Eventos{% endblock %}

{% block body %}
    <h2>Lista de Eventos</h2>
    <a href="{{ path('evento_criar') }}" class="btn btn-success btn-sm mb-3">Novo</a>
<table class="table table-hover table-sm table-striped">
    <thead class="table-dark">
        <tr>
            <th>Título</th>
            <th>Data Início</th>
            <th>Data Fim</th>
            <th class="text-center">Opções</th>
        </tr>
    </thead>
    <tbody>
    {% for evento in eventos %}
    <tr>
        <td>{{ evento.titulo }}</td>
        <td>{{ evento.dtInicio|date('d/m/Y') }}</td>
        <td>{{ evento.dtFim|date('d/m/Y') }}</td>
        <td class="text-center">
            <a href="{{ path('evento_mostrar', {id:evento.id}) }}" class="btn btn-sm btn-secondary">Ver</a>
            <a href="{{ path('evento_atualizar', {id:evento.id}) }}" class="btn btn-sm btn-primary">Editar</a>
            <a href="{{ path('evento_deletar', {id:evento.id}) }}" class="btn btn-sm btn-danger">Apagar</a>
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
