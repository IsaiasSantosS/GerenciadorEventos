{% extends 'base.html.twig' %}

{% block title %}
    Detalhes do palestrante
{% endblock %}

{% block body %}
    <h2>Palestrante #{{ palestrante.id }}</h2>
    <a href="{{ path('palestrantes') }}" class="btn btn-sm btn-dark mb-3">Listagem</a>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">{{ palestrante.nome }}</h5>
            <h6 class="card-subtitle mb-2 text-muted">Especilidades: {{ palestrante.especialidade }}</h6>
            <p class="card-text">{{ palestrante.descricao }}</p>
        </div>
        <div class="card-footer">
            <a href="{{ path('palestrante_atualizar', {id:palestrante.id}) }}" class="btn btn-sm btn-primary">Editar</a>
            <a href="{{ path('palestrante_deletar', {id:palestrante.id}) }}" class="btn btn-sm btn-danger">Apagar</a>
        </div>
    </div>
{% endblock %}

