{% extends 'base.html.twig' %}

{% block title %}
    Cadastrar Palestrante
{% endblock %}

{% block body %}
    <h2>Cadastrar Palestrante</h2>
    <a href="{{ path('palestrantes') }}" class="btn btn-dark btn-sm mb-3">Listagem</a>
    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'row'}}) }}
    <div class="col-md-6 col-lg-12">
        {{ form_label(form.nome, 'Nome: ',{'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.nome, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="col-md-6 col-lg-12">
        {{ form_label(form.especialidade, 'Especialidade: ',{'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.especialidade, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="col-lg-12">
        {{ form_label(form.descricao, 'Descrição: ',{'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.descricao, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="col-12 mt-3">
        {{ form_widget(form.salvar, {'attr': {'class': 'btn btn-sm btn-success'}}) }}
        {{ form_widget(form.limpar, {'attr': {'class': 'btn btn-sm btn-secondary'}}) }}
    </div>
    {{ form_end(form) }}
{% endblock %}

